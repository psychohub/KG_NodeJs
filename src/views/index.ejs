<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nodepop</title>
  <style>
    .anuncio-img {
      width: 300px;  
      height: 200px;
      object-fit: cover;
    }
    form div {
      margin-bottom: 10px; 
    }
  
    label {
      display: block;
      margin-bottom: 5px; 
    }
  </style>
</head>
<body>
  <!-- Formulario para registrar anuncios -->
  <form action="/api/ads/registrar" method="post" enctype="multipart/form-data">
    <h1>Registrar</h1>
    <div>
      <label for="nombre">Nombre:</label>
      <input type="text" name="nombre" required>
    </div>
  
    <div>
      <label for="venta">Venta:</label>
      <input type="checkbox" name="venta">
    </div>
  
    <div>
      <label for="precio">Precio:</label>
      <input type="number" name="precio" required>
    </div>
  
    <div>
      <label for="foto">Foto:</label>
      <input type="file" name="foto" accept="image/*" required>
    </div>
  
    <div>
      <label for="tags">Tags:</label>
      <select name="tags" multiple>
        <option value="work">Work</option>
        <option value="lifestyle">Lifestyle</option>
        <option value="motor">Motor</option>
        <option value="mobile">Mobile</option>
      </select>
    </div>
  
    <button type="submit">Registrar Anuncio</button>
  </form>
  
  <h1>Anuncios</h1>
  <!-- Mostrar la lista de anuncios aquÃ­ -->
  <ul>
    <% adData.anuncios.forEach(anuncio => { %>
      <li>
        <h2><%= anuncio.nombre %></h2>
        <p><%= anuncio.venta ? 'Se vende' : 'Se busca' %></p>
        <p>Precio: <%= anuncio.precio %></p>
        <% if (anuncio.foto) { %>
          <img class="anuncio-img" src="<%= anuncio.foto %>" alt="<%= anuncio.nombre %>">
        <% } else { %>
          <img class="anuncio-img" src="/images/<%= anuncio.nombre %>.jpg" alt="<%= anuncio.nombre %>">
        <% } %>
        <p>Tags: <%= anuncio.tags.join(', ') %></p>
      </li>
    <% }); %>
  </ul>
  
</body>
</html>